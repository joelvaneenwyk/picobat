ROOTDIR=..
BINDIR?=$(ROOTDIR)/pbat
PBAT=$(BINDIR)/pbat
TESTS=$(shell find . -name "*.bat")
TESTS.OUT=$(TESTS:.bat=.out)

all: test

test: test-clean pbat $(TESTS.OUT)

test-clean:
	rm -Rf $(TESTS.OUT) block

%.out: %.bat
	@echo Running test :  $<
	@$(PBAT) run-test.cmd $< $@
	@cmp $@ $@.ok; \
	case $$? in \
		0) echo "	OK";true;; \
		*) echo "	ERROR";false;; \
	esac;

pbat:
	$(MAKE) -C ../pbat

.PHONY: test test-clean
.SUFFIXES: .bat .out
